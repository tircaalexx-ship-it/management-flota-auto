<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= titlu %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">üöó Management FlotƒÉ Auto</a>
            <div class="navbar-nav">
                <a class="nav-link" href="/">Panou Control</a>
                <a class="nav-link" href="/masini">Ma»ôini</a>
                <a class="nav-link" href="/rapoarte/documente">Rapoarte</a>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Interven»õii - <%= masina.marca %> <%= masina.model %> (<%= masina.nrInmatriculare %>)</h2>
            <a href="/masini" class="btn btn-secondary">√énapoi la Ma»ôini</a>
        </div>

        <!-- Grafic Costuri Interven»õii -->
        <div class="row mb-4">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h5>Costuri Interven»õii pe LunƒÉ</h5>
                    </div>
                    <div class="card-body">
                        <canvas id="graficCosturi" height="100"></canvas>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h5>Statistici Interven»õii</h5>
                    </div>
                    <div class="card-body">
                        <p><strong>Total interven»õii:</strong> <%= interventii.length %></p>
                        <p><strong>Cost total:</strong> <%= interventii.reduce((sum, i) => sum + i.cost, 0) %> RON</p>
                        <p><strong>Ultima interven»õie:</strong> 
                            <% if (interventii.length > 0) { %>
                                <%= new Date(Math.max(...interventii.map(i => new Date(i.data)))).toLocaleDateString('ro-RO') %>
                            <% } else { %>
                                Niciuna
                            <% } %>
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Formular AdƒÉugare Interven»õie -->
        <div class="card mb-4">
            <div class="card-header">
                <h5>AdaugƒÉ Interven»õie NouƒÉ</h5>
            </div>
            <div class="card-body">
                <form action="/masini/<%= masina.id %>/interventii" method="POST">
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <label class="form-label">Tip Interven»õie</label>
                            <select name="tip" class="form-select" required>
                                <option value="Service">Service</option>
                                <option value="Repara»õie">Repara»õie</option>
                                <option value="ITP">ITP</option>
                                <option value="Asigurare">Asigurare</option>
                                <option value="Altele">Altele</option>
                            </select>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label class="form-label">Data</label>
                            <input type="date" name="data" class="form-control" required>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label class="form-label">Kilometraj</label>
                            <input type="number" name="kilometraj" class="form-control" required>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label class="form-label">Cost (RON)</label>
                            <input type="number" step="0.01" name="cost" class="form-control" required>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Descriere</label>
                        <textarea name="descriere" class="form-control" rows="2" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-success">AdaugƒÉ Interven»õie</button>
                </form>
            </div>
        </div>

        <!-- ListƒÉ Interven»õii -->
        <div class="card">
            <div class="card-header">
                <h5>Istoric Interven»õii</h5>
            </div>
            <div class="card-body">
                <% if (interventii.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Data</th>
                                    <th>Tip</th>
                                    <th>Descriere</th>
                                    <th>Kilometraj</th>
                                    <th>Cost</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% interventii.forEach(interventie => { %>
                                <tr>
                                    <td><%= new Date(interventie.data).toLocaleDateString('ro-RO') %></td>
                                    <td><span class="badge bg-info"><%= interventie.tip %></span></td>
                                    <td><%= interventie.descriere %></td>
                                    <td><%= interventie.kilometraj %> km</td>
                                    <td><strong><%= interventie.cost %> RON</strong></td>
                                </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <p class="text-muted">Nu existƒÉ interven»õii √Ænregistrate pentru aceastƒÉ ma»ôinƒÉ.</p>
                <% } %>
            </div>
        </div>
    </div>

    <script>
        // Grafic pentru costuri
        const ctx = document.getElementById('graficCosturi').getContext('2d');
        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['Ian', 'Feb', 'Mar', 'Apr', 'Mai', 'Iun'],
                datasets: [{
                    label: 'Cost Interven»õii (RON)',
                    data: [450, 320, 280, 150, 400, 220],
                    backgroundColor: 'rgba(54, 162, 235, 0.5)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>
</body>
</html>