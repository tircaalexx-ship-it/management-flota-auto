<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= titlu %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        .card {
            margin-bottom: 20px;
            border: none;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/dashboard">
                <i class="fas fa-car"></i> Management Flotă Auto
            </a>
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/dashboard">
                    <i class="fas fa-tachometer-alt"></i> Panou Control
                </a>
                <a class="nav-link" href="/masini">
                    <i class="fas fa-list"></i> Mașini
                </a>
                <a class="nav-link active" href="/rapoarte/consum">
                    <i class="fas fa-chart-bar"></i> Raport Consum
                </a>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                        <i class="fas fa-user"></i> <%= nume || utilizator %>
                        <% if (rol === 'admin') { %>
                            <span class="badge bg-danger">Admin</span>
                        <% } else { %>
                            <span class="badge bg-secondary">User</span>
                        <% } %>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="/statistici">
                            <i class="fas fa-chart-pie"></i> Statistici
                        </a></li>
                        <li><a class="dropdown-item" href="/rapoarte/documente">
                            <i class="fas fa-file-alt"></i> Rapoarte
                        </a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="/logout">
                            <i class="fas fa-sign-out-alt"></i> Deconectare
                        </a></li>
                    </ul>
                </li>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><i class="fas fa-gas-pump"></i> Raport Consum Combustibil</h2>
            <a href="/masini" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Înapoi la Mașini
            </a>
        </div>

        <!-- Carduri Statistici Consum -->
        <div class="row">
            <div class="col-md-4">
                <div class="card text-white bg-primary">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-title">Consum Mediu</h6>
                                <h2 class="mb-0">
                                    <% const consumMediu = masini.length > 0 ? (masini.reduce((sum, m) => sum + m.consum, 0) / masini.length).toFixed(2) : 0; %>
                                    <%= consumMediu %>
                                </h2>
                                <small>l/100km</small>
                            </div>
                            <i class="fas fa-tachometer-alt fa-2x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="card text-white bg-success">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-title">Cel mai mic consum</h6>
                                <h2 class="mb-0">
                                    <% const consumMin = masini.length > 0 ? Math.min(...masini.map(m => m.consum)).toFixed(2) : 0; %>
                                    <%= consumMin %>
                                </h2>
                                <small>l/100km</small>
                            </div>
                            <i class="fas fa-arrow-down fa-2x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="card text-white bg-warning">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-title">Cel mai mare consum</h6>
                                <h2 class="mb-0">
                                    <% const consumMax = masini.length > 0 ? Math.max(...masini.map(m => m.consum)).toFixed(2) : 0; %>
                                    <%= consumMax %>
                                </h2>
                                <small>l/100km</small>
                            </div>
                            <i class="fas fa-arrow-up fa-2x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Grafic Consum -->
        <div class="card mt-4">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-chart-bar"></i> Comparatie Consum pe Mașini
                </h5>
            </div>
            <div class="card-body">
                <canvas id="graficConsum" height="80"></canvas>
            </div>
        </div>

        <!-- Tabel Detalii Consum -->
        <div class="card mt-4">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-table"></i> Detalii Consum pe Mașini
                </h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Marcă</th>
                                <th>Model</th>
                                <th>An</th>
                                <th>Nr. Înmatriculare</th>
                                <th>Consum (l/100km)</th>
                                <th>Stare</th>
                                <th>Evaluare</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% masini.forEach(masina => { %>
                            <tr>
                                <td><%= masina.marca %></td>
                                <td><%= masina.model %></td>
                                <td><%= masina.an %></td>
                                <td><strong><%= masina.nrInmatriculare %></strong></td>
                                <td>
                                    <span class="badge 
                                        <% if (masina.consum < 6) { %>bg-success<% } %>
                                        <% if (masina.consum >= 6 && masina.consum < 9) { %>bg-warning<% } %>
                                        <% if (masina.consum >= 9) { %>bg-danger<% } %>
                                    "><%= masina.consum %></span>
                                </td>
                                <td>
                                    <span class="badge 
                                        <% if (masina.stare === 'Activă') { %>bg-success<% } %>
                                        <% if (masina.stare === 'În service') { %>bg-warning<% } %>
                                        <% if (masina.stare === 'Închiriată') { %>bg-info<% } %>
                                    "><%= masina.stare %></span>
                                </td>
                                <td>
                                    <% if (masina.consum < 6) { %>
                                        <span class="text-success">
                                            <i class="fas fa-check-circle"></i> Excelent
                                        </span>
                                    <% } else if (masina.consum >= 6 && masina.consum < 9) { %>
                                        <span class="text-warning">
                                            <i class="fas fa-exclamation-circle"></i> Acceptabil
                                        </span>
                                    <% } else { %>
                                        <span class="text-danger">
                                            <i class="fas fa-times-circle"></i> Ridicat
                                        </span>
                                    <% } %>
                                </td>
                            </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
    
    <script>
        // Grafic pentru consum
        const ctx = document.getElementById('graficConsum').getContext('2d');
        
        // Pregătim datele pentru grafic
        const labelMasini = [
            <% masini.forEach((masina, index) => { %>
                '<%= masina.marca %> <%= masina.model %>'<%= index < masini.length - 1 ? ',' : '' %>
            <% }); %>
        ];

        const dateConsum = [
            <% masini.forEach((masina, index) => { %>
                <%= masina.consum %><%= index < masini.length - 1 ? ',' : '' %>
            <% }); %>
        ];

        const culoriFundal = [
            <% masini.forEach((masina, index) => { %>
                <% if (masina.consum < 6) { %>
                    '#28a745'
                <% } else if (masina.consum >= 6 && masina.consum < 9) { %>
                    '#ffc107'
                <% } else { %>
                    '#dc3545'
                <% } %>
                <%= index < masini.length - 1 ? ',' : '' %>
            <% }); %>
        ];

        const culoriBorder = [
            <% masini.forEach((masina, index) => { %>
                <% if (masina.consum < 6) { %>
                    '#218838'
                <% } else if (masina.consum >= 6 && masina.consum < 9) { %>
                    '#e0a800'
                <% } else { %>
                    '#c82333'
                <% } %>
                <%= index < masini.length - 1 ? ',' : '' %>
            <% }); %>
        ];

        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: labelMasini,
                datasets: [{
                    label: 'Consum (l/100km)',
                    data: dateConsum,
                    backgroundColor: culoriFundal,
                    borderColor: culoriBorder,
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true,
                        title: {
                            display: true,
                            text: 'Consum (l/100km)'
                        }
                    }
                }
            }
        });
    </script>
</body>
</html>