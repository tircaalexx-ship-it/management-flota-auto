<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= titlu %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .card:hover {
            transform: translateY(-5px);
            transition: all 0.3s ease;
        }
        .navbar-brand {
            font-weight: bold;
        }
        .btn {
            border-radius: 8px;
        }
    </style>
</head>
<body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <!-- Adaugă acest cod în bara de navigare -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
        <a class="navbar-brand" href="/">
            <i class="fas fa-car"></i> Management Flotă Auto
        </a>
        
        <div class="navbar-nav ms-auto">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                    <i class="fas fa-user"></i> <%= nume || utilizator %>
                    <% if (rol === 'admin') { %>
                        <span class="badge bg-danger">Admin</span>
                    <% } else { %>
                        <span class="badge bg-secondary">User</span>
                    <% } %>
                </a>
                <ul class="dropdown-menu">
                    <li><span class="dropdown-item-text">
                        Logat ca: <strong><%= utilizator %></strong>
                    </span></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" href="/logout">
                        <i class="fas fa-sign-out-alt"></i> Deconectare
                    </a></li>
                </ul>
            </li>
        </div>
    </div>
</nav>
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-car"></i> Management Flotă Auto
            </a>
            <div class="navbar-nav ms-auto">
                <a class="nav-link active" href="/">
                    <i class="fas fa-tachometer-alt"></i> Panou Control
                </a>
                <a class="nav-link" href="/masini">
                    <i class="fas fa-list"></i> Mașini
                </a>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <!-- Carduri Statistici -->
        <div class="row">
            <div class="col-md-3 mb-4">
                <div class="card text-white bg-primary">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-title">Total Mașini</h6>
                                <h2 class="mb-0"><%= totalMasini %></h2>
                            </div>
                            <i class="fas fa-car fa-2x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-3 mb-4">
                <div class="card text-white bg-success">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-title">Mașini Active</h6>
                                <h2 class="mb-0"><%= masiniActive %></h2>
                            </div>
                            <i class="fas fa-check-circle fa-2x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-3 mb-4">
                <div class="card text-white bg-warning">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-title">În Service</h6>
                                <h2 class="mb-0"><%= masini.filter(m => m.stare === 'În service').length %></h2>
                            </div>
                            <i class="fas fa-wrench fa-2x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-3 mb-4">
                <div class="card text-white bg-info">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-title">Închiriate</h6>
                                <h2 class="mb-0"><%= masini.filter(m => m.stare === 'Închiriată').length %></h2>
                            </div>
                            <i class="fas fa-key fa-2x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Acțiuni Rapide -->
        <div class="row mt-2">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-header bg-white">
                        <h5 class="mb-0 text-primary">
                            <i class="fas fa-bolt"></i> Acțiuni Rapide
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-3 col-6">
                                <a href="/masini" class="btn btn-outline-primary w-100 h-100 py-3">
                                    <i class="fas fa-list fa-2x mb-2"></i><br>
                                    Vezi Toate Mașinile
                                </a>
                            </div>
                            <div class="col-md-3 col-6">
                                <a href="/masini/adauga" class="btn btn-outline-success w-100 h-100 py-3">
                                    <i class="fas fa-plus fa-2x mb-2"></i><br>
                                    Adaugă Mașină
                                </a>
                            </div>
                            <div class="col-md-3 col-6">
                                <a href="/rapoarte/consum" class="btn btn-outline-info w-100 h-100 py-3">
                                    <i class="fas fa-chart-bar fa-2x mb-2"></i><br>
                                    Raport Consum
                                </a>
                            </div>
                            <div class="col-md-3 col-6">
                                <a href="/statistici" class="btn btn-outline-warning w-100 h-100 py-3">
                                    <i class="fas fa-chart-pie fa-2x mb-2"></i><br>
                                    Statistici
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Listă Mașini Recente -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-header bg-white d-flex justify-content-between align-items-center">
                        <h5 class="mb-0 text-primary">
                            <i class="fas fa-clock"></i> Mașini Recente
                        </h5>
                        <a href="/masini" class="btn btn-sm btn-primary">Vezi Toate</a>
                    </div>
                    <div class="card-body">
                        <% if (masini.length > 0) { %>
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Marcă</th>
                                            <th>Model</th>
                                            <th>Nr. Înmatriculare</th>
                                            <th>Stare</th>
                                            <th>Acțiuni</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% masini.slice(0, 5).forEach(masina => { %>
                                        <tr>
                                            <td><%= masina.marca %></td>
                                            <td><%= masina.model %></td>
                                            <td><strong><%= masina.nrInmatriculare %></strong></td>
                                            <td>
                                                <span class="badge 
                                                    <% if (masina.stare === 'Activă') { %>bg-success<% } %>
                                                    <% if (masina.stare === 'În service') { %>bg-warning<% } %>
                                                    <% if (masina.stare === 'Închiriată') { %>bg-info<% } %>
                                                "><%= masina.stare %></span>
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <a href="/masini/editeaza/<%= masina.id %>" class="btn btn-outline-primary">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <form action="/masini/sterge/<%= masina.id %>" method="POST" style="display: inline;">
                                                        <button type="submit" class="btn btn-outline-danger" onclick="return confirm('Sigur vrei să ștergi această mașină?')">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        <% } else { %>
                            <div class="text-center py-4">
                                <i class="fas fa-car fa-3x text-muted mb-3"></i>
                                <h5 class="text-muted">Nu există mașini în flotă</h5>
                                <p class="text-muted">Începe prin a adăuga prima mașină.</p>
                                <a href="/masini/adauga" class="btn btn-success">
                                    <i class="fas fa-plus"></i> Adaugă Prima Mașină
                                </a>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-white text-center py-3 mt-5">
        <div class="container">
            <p class="mb-0">🚗 Sistem Management Flotă Auto &copy; 2024</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>